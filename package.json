{
  "name": "now-ci",
  "version": "0.0.1",
  "description": "An ephemeral CI tool for javascript apps",
  "author": "Sam Garson <samtgarson@gmail.com>",
  "private": false,
  "scripts": {
    "dev": "node build --watch",
    "build": "node ./build && nuxt build",
    "start": "NODE_ENV=production node ./index.js",
    "test": "xo && ava",
    "test:spec": "ava",
    "test:lint": "xo"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "buffer-equal-constant-time": "^1.0.1",
    "camelize": "^1.0.0",
    "cookie-session": "^2.0.0-alpha.3",
    "debounce": "^1.0.0",
    "dotenv": "^4.0.0",
    "github": "^8.2.1",
    "github-oauth": "^0.2.2",
    "in-mem": "^0.0.2-RC2",
    "micro": "^6.2.1",
    "micro-method-router": "^0.1.0",
    "micro-route": "^2.2.1",
    "micro-visualize": "^3.0.0",
    "now-logs": "^0.0.7",
    "nuxt": "latest",
    "pify": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.23.0",
    "bulma": "^0.3.1",
    "chalk": "^1.1.3",
    "eslint": "^3.13.1",
    "eslint-config-samtgarson": "^0.0.6",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "ora": "^1.1.0",
    "pug": "^2.0.0-beta11",
    "sass-loader": "^5.0.1",
    "webpack": "2",
    "xo": "^0.17.1"
  },
  "now": {
    "env": {
      "GITHUB_CLIENT": "@ci_github_client",
      "GITHUB_SECRET": "@ci_github_secret",
      "SECRET_KEY": "@ci_secret_key"
    },
    "alias": "ci"
  },
  "main": "index.js",
  "repository": "samtgarson/now-ci",
  "license": "MIT",
  "xo": {
    "extends": "samtgarson",
    "envs": [
      "node",
      "browser"
    ],
    "extensions": [
      ".vue"
    ],
    "plugins": [
      "html",
      "promise"
    ],
    "rules": {
      "camelcase": 0
    },
    "parser": "babel-eslint"
  },
  "ava": {
    "files": [
      "api/test/**/*.test.js"
    ],
    "source": [
      "api/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-2"
    ]
  }
}
